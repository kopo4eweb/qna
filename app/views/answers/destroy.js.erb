<% if flash.key?(:alert) %>
  $('.answer-danger-<%= @answer.id %>').html('<%= j render partial: 'shared/inline_flash_message', locals: { type: 'alert', message: flash[:alert] } %>');
<% elsif flash.key?(:notice) %>
  $('.answer-<%= @answer.id %>').replaceWith('<%= j render partial: 'shared/inline_flash_message', locals: { type: 'notice', message: flash[:notice] } %>');
<% end %>
